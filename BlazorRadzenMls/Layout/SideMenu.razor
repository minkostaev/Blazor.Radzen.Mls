<RadzenPanelMenu DisplayStyle="@_displayStyle" ShowArrow="@_isShowArrow" Multiple="@_multiple">
    <RadzenPanelMenuItem Text="Home" Path="" Icon="home"></RadzenPanelMenuItem>
    <RadzenPanelMenuItem Text="Blazor" Icon="bug_report">
        <RadzenPanelMenuItem Text="Counter" Path="counter" Icon="done" />
        <RadzenPanelMenuItem Text="Weather" Path="weather" Icon="backup" />
        <RadzenPanelMenuItem Text="Renderfragment" Path="renderfragment" Icon="dashboard" />
        <RadzenPanelMenuItem Text="@langService.Keys["Options"]" Path="options" Icon="build" />
    </RadzenPanelMenuItem>
    <RadzenPanelMenuItem Text="Radzen" Icon="extension">
        <RadzenPanelMenuItem Text="Icons" Path="icons" Icon="perm_media" />
    </RadzenPanelMenuItem>

    <RadzenPanelMenuItem Text="Menu Options" Icon="build">

        <RadzenCheckBox @bind-Value=@_multiple Name="CheckBox1" TValue="bool" />
        <RadzenLabel Text="Allow multiple expand" Component="CheckBox1" />
        
        <RadzenRadioButtonList @bind-Value=@_displayStyle Orientation="Orientation.Vertical" TValue="MenuItemDisplayStyle">
            <Items>
                <RadzenRadioButtonListItem Text="IconAndText" Value="MenuItemDisplayStyle.IconAndText" />
                <RadzenRadioButtonListItem Text="Icon" Value="MenuItemDisplayStyle.Icon" />
                <RadzenRadioButtonListItem Text="Text" Value="MenuItemDisplayStyle.Text" />
            </Items>
        </RadzenRadioButtonList>

        <RadzenCheckBox @bind-Value=@_isShowArrow Name="CheckBox2" TValue="bool" />
        <RadzenLabel Text="Show Arrow" Component="CheckBox2" />

    </RadzenPanelMenuItem>
</RadzenPanelMenu>

@code {

    private MenuItemDisplayStyle _displayStyle = MenuItemDisplayStyle.IconAndText;

    private bool _isShowArrow = true;

    private bool _multiple;

    protected override void OnInitialized()
    {
        appState.RefreshEvent += Refresh_Event;
    }
    private void Refresh_Event(object? sender, EventArgs e) { StateHasChanged(); }

}