@using BlazorRadzenMls.Components

@inherits LayoutComponentBase

<RadzenLayout Style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            @* <RadzenLabel Text="Header" /> *@
            @* <RadzenThemes />
            <RefreshLink />
            <LanguageSelector /> *@

            <RadzenLink Path=""><RadzenIcon Icon="home" IconColor="@Colors.Primary" Style="font-weight: 1000;" /></RadzenLink>
            <RadzenLink Path="options"><RadzenIcon Icon="build" IconColor="@Colors.Primary" Style="font-weight: 1000;" /></RadzenLink>

        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebarExpanded">
        <RadzenNavMenus />
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {

    bool sidebarExpanded = true;

}