@page "/"

@using BlazorRadzenMls.Models
@using BlazorRadzenMls.Pages.Learn.Parameters

<PageTitle>Blazor Radzen Mls</PageTitle>

@* @__lang["Title to do"] *@
<RadzenText Text="This is my personal site for experiments" TextStyle="TextStyle.H4" class="rz-color-primary" />

<div style="padding-bottom: 12px;">
    <div>
        <RadzenText Text="This is Blazor WebAssembly App with "
                    TextStyle="TextStyle.Body1" class="rz-color-primary" Style="display: inline-block;" />
        <RadzenText Text="PWA -" MouseEnter="@(args => ShowTooltip(args))"
                    TextStyle="TextStyle.Body1" class="rz-color-primary" Style="display: inline-block;" />
        <RadzenText Text=" option to install and work offline!"
                    TextStyle="TextStyle.Body1" class="rz-color-primary" Style="display: inline-block;" />
    </div>

    <ShoutOutLinks Link1="" Icon1=""
                   Text1="You can see it in this repo: " Link2="@AppValues.GitHubMy" />
</div>

<div>
    <RadzenText Text="This site uses:" TextStyle="TextStyle.H5" class="rz-color-primary" />

    <ShoutOutLinks Link1="https://blazor.radzen.com/" Icon1="language"
                   Text1="Radzen.Blazor" Link2="@AppValues.GitHubRadzen" />
</div>

<div>
    <ShoutOutLinks Link1="https://akmultilanguages.azurewebsites.net/" Icon1="language"
                   Text1="AKSoftware.Localization.MultiLanguages" Link2="@AppValues.GitHubAKSoftware" />
</div>

<div style="padding-bottom: 12px;">
    <ShoutOutLinks Link1="https://auth0.com/" Icon1="language"
                   Text1="Auth0 by Okta" Link2="@AppValues.GitHubAuth0" />
</div>

<InputText @bind-Value="@_name" />

<Parametri Name="@_name" />

@code {

    private string? _name { get; set; }


    private void ShowTooltip(ElementReference elementReference)
    {
        var options = new TooltipOptions() { Position = TooltipPosition.Bottom };
        __tooltip.Open(elementReference, "Progressive Web Application", options);
    }


}