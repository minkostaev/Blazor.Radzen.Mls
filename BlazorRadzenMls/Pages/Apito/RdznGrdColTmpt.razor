<RadzenColumn SizeSM="4">
    <RadzenText class="rz-color-on-primary-light rz-display-flex rz-mt-4 rz-mb-0"
                TextStyle="TextStyle.Overline">@Label</RadzenText>
    <RadzenText TextStyle="TextStyle.Body1" class="rz-color-on-primary-light"
                Style="text-overflow: ellipsis; overflow: hidden; white-space: nowrap; font-weight: bold;">
        @Value
    </RadzenText>
</RadzenColumn>

@code {

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public string? Value { get; set; }

}